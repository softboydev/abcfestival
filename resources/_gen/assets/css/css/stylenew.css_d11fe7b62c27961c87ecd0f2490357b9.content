html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,font,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td{margin:0;padding:0;border:0;outline:0;line-height:inherit;font-weight:inherit;font-style:inherit;font-size:100%;font-family:inherit;vertical-align:baseline}body{background:#000;font-family:monospace;font-size:18px;width:90%;height:90%;padding:5%}div{color:#fff;z-index:3;position:relative}canvas{width:auto!important;height:auto!important;position:fixed;top:0;left:0;z-index:2;background:transparent}::selection,::-moz-selection{color:#000;background:#fff}@media screen and (max-width:1200px){body{font-size:15px}}@media screen and (max-width:600px){body{font-size:14px}}@media screen and (max-width:350px){body{font-size:11px}}a{color:inherit;text-decoration:none}main a{text-decoration:underline}.headline{position:fixed;top:5%;left:5%;top:5vh;left:5vh}.logo{position:fixed;top:5%;right:5%;top:5vh;right:5vh}.logo img{width:auto;height:2.4em}h1,time{font-size:2.4em;font-weight:700;text-transform:uppercase;display:inline-block}h1:hover,li:hover,time:hover{transform:rotateY(180deg)}@media screen and (max-width:600px){h1,time{font-size:1em}}h2{font-size:12px}h4{font-weight:700;margin:6em 0 2em;display:inline-block}ul{list-style:none;text-transform:uppercase;font-weight:700}li{display:inline-block}nav:first-of-type ul{position:fixed;left:5vh;bottom:4em;text-align:left}nav:last-of-type ul{position:fixed;right:5vh;bottom:4em;text-align:right}main{width:100%;max-width:420px;margin:38.5vh auto}main img{width:100%;height:auto}main ul,main nav ul:first-of-type,main nav ul:last-of-type{position:inherit;text-align:left;text-transform:none;font-weight:400}main p,main li{margin-bottom:1em;display:block}main li:hover{transform:none}main b,main strong{font-weight:700}main h2{font-weight:700;font-size:inherit}main p,main li,main h4,ul a{background:transparent}#newsfeed{text-transform:uppercase;font-weight:700;position:fixed;padding:1em;left:0;bottom:0;overflow:hidden;white-space:nowrap;animation:news 60s infinite linear;display:none}#newsfeed:hover{animation-play-state:paused}#newsfeed.ready{display:block}@keyframes news{0%{transform:translateX(0%)}100%{transform:translateX(-50%)}}#popup{position:fixed;top:-100vh;left:0;width:100vw;height:100vh;transition:all .2s ease-out;z-index:1000}.popup-visible #popup{top:0}#popup .screen{background:#000;opacity:0;width:100%;height:100%;transition:all .2s ease-out;position:absolute}.popup-visible #popup .screen{opacity:.67}#popup .inner{background:#fff;color:#000;position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);width:80vw;height:80vh;max-width:600px;max-height:800px;cursor:url(/img/popup/cursor.png),pointer;border-radius:24px}#popup .image{width:67%;height:50%;position:absolute;left:50%;top:40%;transform:translate(-50%,-50%);text-align:center}#popup .image img{position:absolute;width:100%;height:auto;transform:translateX(-50%)}@media(min-aspect-ratio:1/1){#popup .image img{position:absolute;width:auto;height:100%}}#popup .text{position:absolute;bottom:2em;left:10%;width:80%;text-align:center;color:#000;background:#fff;padding:.5em;z-index:1001;font-weight:700;font-size:1.5em}